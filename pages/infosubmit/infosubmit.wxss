@import "../../font/iconfont.wxss";
page,.pagebox{
  width: 100%;
  height: 100%;
  background-color: #F7F7F7;
}
.border-bottom{
  border-bottom: 1px solid #EDEDED;
}

.section-formbox{
  margin-top: 20rpx;
  background-color: #ffffff;
  padding-left: 20rpx;
  overflow: hidden;
}
.inputbox-formbox{
  padding: 30rpx 20rpx 30rpx 0;
  display: flex;
  align-items: center
}
.inputbox-formbox .tit{
  font-size: 30rpx;
  width: 100rpx;
}
.inputbox-formbox .input{
  flex: 1;
  font-size: 30rpx;
}
.inputbox-formbox .radio-group{
  flex: 1;
  font-size: 30rpx;
}
.inputbox-formbox .radio-group label{
  margin-right: 40rpx;
}
.inputbox-formbox picker{
  flex: 1;
  font-size: 30rpx;
}
.section-formbox .title{
  font-size: 30rpx;
  padding: 30rpx 0;
}
.section-formbox .textarea{
  width: 100%;
  height: 125rpx;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #B3B3B3; 
}
.section-formbox .iconfont-right{
  margin-top: 30rpx;
  margin-right: 20rpx;
}
.btnbox{
  padding: 0 20rpx;
  margin-top: 100rpx;
}
.btnbox .btn{
  color: #fff;
  font-size: 30rpx;
  background-color: #1E90FF;
}